{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "lib": ["es2015", "webworker"],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "typeRoots": ["node_modules/@types"],
        "baseUrl": "./",
        "paths": {
            "node-mqtt": ["node_modules/mqtt"],
            "mqtt": ["./mqtt"],
            "@types": ["src/types/index.ts"]
        }
    }
}
